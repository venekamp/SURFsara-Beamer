\RequirePackage{tikz}

\mode
<presentation>

% Set the background of the frames
\setbeamertemplate{background}{
    \begin{tikzpicture}
        % Don't stray outside the paper dimentions.
        \useasboundingbox (0, 0) rectangle(\the\paperwidth, \the\paperheight);
        \fill[white!93!black, opacity=1] (0, 0) rectangle(\the\paperwidth, \the\paperheight);
        \ifnum\thepage=1\relax%
            \fill[color=SURFsaraGreen] (0, 0) rectangle(.175\paperwidth, \the\paperheight);
        \fi
        % Use the below background when it is not the title page.
        \ifnum\thepage>1\relax%
            % Set a solid bar at the top of the frame which holds the frame title
            \fill[color=SURFsaraGreen] (0, \the\paperheight - 8ex) rectangle(\the\paperwidth, \the\paperheight);
            % Set a solid bar a the bottom of the frame which hold presentation meta data
            \fill[color=SURFsaraGreen] (0, 0) rectangle(\the\paperwidth, 1.75ex);
        \fi
    \end{tikzpicture}
}

\setbeamertemplate{frametitle}{%
    \nointerlineskip%
    \begin{beamercolorbox}[wd=\pagewidth, ht=5ex, dp=2ex, left, vmode]{frametitle}
        \ifx\insertframesubtitle\@empty%
            \hspace{.75em}{\usebeamerfont{frametitle}\usebeamercolor{frametitle}\strut\insertframetitle}
            \vfill
            \vspace{.7ex}
        \else%
            \vspace*{-4ex}\hspace{.75em}{\usebeamerfont{frametitle}\usebeamercolor{frametitle}\strut\insertframetitle}
            \par\hspace{.75em}{\usebeamerfont{framesubtitle}\usebeamercolor{framesubtitle}\strut\insertframesubtitle}
        \fi
    \end{beamercolorbox}
}

\titlegraphic{\includegraphics[height=4ex]{logos/SURF_SARA_fc.pdf}}

