    \hspace{.2\paperwidth}%
    \begin{beamercolorbox}[wd=.65\paperwidth, center]{location}
        \usebeamerfont{location}\usebeamercolor{location}\color{fg}\insertlocation
    \end{beamercolorbox}
    \vfill
    \hspace{.2\paperwidth}%
    \begin{beamercolorbox}[wd=.65\paperwidth, center]{logo}
        \inserttitlegraphic
    \end{beamercolorbox}
