\usepackage{fontspec}

\setsansfont{Source Sans Pro}[
    ItalicFont     = *-Italic,
    BoldFont       = *-Bold,
    BoldItalicFont = *-BoldItalic,
    FontFace       = {el}{n}{*-ExtraLight},
    FontFace       = {el}{it}{*-ExtraLightItalic},
    FontFace       = {lt}{n}{*-Light},
    FontFace       = {lt}{it}{*-LightItalic},
    FontFace       = {sb}{n}{*-SemiBold},
    FontFace       = {sb}{it}{*-SemiBold Italic},
    FontFace       = {bb}{n}{*-Black},
    FontFace       = {bb}{it}{*-Black Italic},
    Ligatures = TeX
]

\DeclareRobustCommand\elseries{\fontseries{el}\selectfont}
\DeclareTextFontCommand{\textel}{\elseries}

\DeclareRobustCommand\ltseries{\fontseries{lt}\selectfont}
\DeclareTextFontCommand{\textlt}{\ltseries}

\DeclareRobustCommand\sbseries{\fontseries{sb}\selectfont}
\DeclareTextFontCommand{\textsb}{\sbseries}

\DeclareRobustCommand\bbseries{\fontseries{bb}\selectfont}
\DeclareTextFontCommand{\textbb}{\bbseries}

\setmonofont{Source Code Pro}[
    ItalicFont     = *-Italic,
    BoldFont       = *-Bold,
    BoldItalicFont = *-BoldItalic,
    FontFace       = {el}{n}{*-ExtraLight},
    FontFace       = {el}{it}{*-ExtraLightItalic},
    FontFace       = {lt}{n}{*-Light},
    FontFace       = {lt}{it}{*-LightItalic},
    FontFace       = {sb}{n}{*-SemiBold},
    FontFace       = {sb}{it}{*-SemiBold Italic},
    FontFace       = {bb}{n}{*-Black},
    FontFace       = {bb}{it}{*-Black Italic},
    Scale = MatchLowercase,
    Ligatures = TeX
]

\setbeamerfont{title}{size=\LARGE, series=\sbseries}
\setbeamerfont{subtitle}{size=\large, series=\ltseries}
\setbeamerfont{author}{series=\normalfont}
\setbeamerfont{institute}{size=\footnotesize, series=\ltseries}
\setbeamerfont{date}{size=\footnotesize, series=\ltseries}
\setbeamerfont{location}{size=\footnotesize, family=\ttfamily}

\setbeamerfont{frametitle}{size=\Large, series=\sbseries}
\setbeamerfont{framesubtitle}{size=\small, series=\ltseries}

\setbeamerfont{caption name}{size=\scriptsize, series=\ltseries}
\setbeamerfont{caption}{size=\scriptsize, series=\normal}

\setbeamerfont{block title}{series=\mdseries}
\setbeamerfont{block body}{series=\mdseries}

