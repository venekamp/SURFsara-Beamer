\defbeamertemplate{balloon}{surfsara}[1]
{
   \begin{textblock*}{\pagewidth}(0pt, 0pt)
      \includegraphics[width=\pagewidth]{#1}
   \end{textblock*}
   \begin{textblock*}{\pagewidth}(0pt, 0pt)
      \begin{tikzpicture}
         % \pgfsetfillopacity{.9}
         \fill[fill=white]
         % Clockwise rectangle
         (0, 0)-- (0,\pageheight)-- (\pagewidth, \pageheight)-- (\pagewidth, 0)--cycle
         % Counter-clockwise rectangle
         (4mm, 4mm)[rounded corners=5mm]-- (\pagewidth-4mm, 4mm)--
         (\pagewidth-5mm, \pageheight-4mm)-- (4mm, \pageheight-4mm)--cycle;
      \end{tikzpicture}
   \end{textblock*}
   \begin{textblock*}{\pagewidth}(10mm, 10mm)
      \begin{tikzpicture}
         \pgfsetfillopacity{.87}
         \fill[fill=white]
         (0, 0)[rounded corners=3mm]-- (12mm, 0)-- (12mm, -8.5mm)--
         (40mm, -8.5mm)-- (40mm, -50mm)-- (12mm, -50mm)-- (12mm, -8.5mm)--
         (0, -8.5mm)-- cycle;
      \end{tikzpicture}
   \end{textblock*}
}

\def\balloon#1{\setbeamertemplate{balloon}[surfsara]{#1}\usebeamertemplate{balloon}}


